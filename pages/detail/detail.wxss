page {
  background: #F3F0D8;
}

.card {
  margin: 40rpx 30rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 4rpx 6rpx 8rpx #BB3D71;
}

.top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 36rpx;
}

.big_font {
  font-weight: bold;
}

.sub_text {
  color: #999999;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.highlight_text {
  color: rgba(243, 28, 24);
  font-size: 28rpx;
}

.bottom {
  display: flex;
  justify-content: space-between;
}

.ball {
  background: radial-gradient(circle,  rgb(243, 28, 64) 0%, rgba(252,69,237,1) 100%);
  border-radius: 50%;
  color: #fff;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-weight: bold;
}

.blue {
  background: radial-gradient(circle, rgba(58,156,180,1) 0%, rgba(29,92,253,1) 29%, rgba(69,157,252,1) 100%);
}

.list {
  margin: 30rpx;
  border-left: 1px solid #999999;
  border-top: 1px solid #999999;
}

.row {
  line-height: 60rpx;
  color: #999999;
  display: flex;
}

.cell {
  border-right: 1px solid #999999;
  border-bottom: 1px solid #999999;
  flex-basis: 0;
  flex-grow: 1;
  text-align: center;
}
